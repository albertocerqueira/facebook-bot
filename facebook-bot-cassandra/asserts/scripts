--GC_GRACE = 10; // 10 minutes to remove marked for deletion
--column_type = 'Super' // type is super column

--create keyspace
CREATE KEYSPACE social with placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy' and strategy_options = {replication_factor:1};

--create super column
CREATE COLUMN FAMILY facebook_post WITH column_type = 'Super' AND default_validation_class = 'UTF8Type' AND comparator = 'UTF8Type' AND subcomparator = 'UTF8Type' AND key_validation_class = 'UTF8Type';
UPDATE COLUMN FAMILY facebook_post WITH GC_GRACE = 10; // 10 seconds

--create column
CREATE COLUMN FAMILY facebook_post_popular WITH comparator = UTF8Type AND key_validation_class = UTF8Type AND column_metadata = [{column_name: post_id_user_id_user_name, validation_class: UTF8Type}];