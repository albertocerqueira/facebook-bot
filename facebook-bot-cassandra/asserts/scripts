--GC_GRACE = 10; // 10 minutes to remove marked for deletion
--column_type = 'Super' // type is super column

--create keyspace
CREATE KEYSPACE social with placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy' and strategy_options = {replication_factor:1};

--drop column family
drop column family cf_test_column_super;
drop column family cf_test_column;
drop column family facebook_post;
drop column family facebook_post_popular;

--create super column for test
CREATE COLUMN FAMILY cf_test_column_super WITH column_type = 'Super' AND default_validation_class = 'UTF8Type' AND comparator = 'UTF8Type' AND subcomparator = 'UTF8Type' AND key_validation_class = 'UTF8Type';
UPDATE COLUMN FAMILY cf_test_column_super WITH GC_GRACE = 0; // 0 seconds

--create column for test
CREATE COLUMN FAMILY cf_test_column WITH comparator = UTF8Type AND key_validation_class = UTF8Type AND column_metadata = [{column_name: name_column, validation_class: UTF8Type}];
UPDATE COLUMN FAMILY cf_test_column WITH GC_GRACE = 0; // 0 seconds

--create super column
CREATE COLUMN FAMILY facebook_post WITH column_type = 'Super' AND default_validation_class = 'UTF8Type' AND comparator = 'UTF8Type' AND subcomparator = 'UTF8Type' AND key_validation_class = 'UTF8Type';
UPDATE COLUMN FAMILY facebook_post WITH GC_GRACE = 0; // 0 seconds

--create column
CREATE COLUMN FAMILY facebook_post_popular WITH comparator = UTF8Type AND key_validation_class = UTF8Type AND column_metadata = [{column_name: name_column, validation_class: UTF8Type}];
UPDATE COLUMN FAMILY facebook_post_popular WITH GC_GRACE = 0; // 0 seconds