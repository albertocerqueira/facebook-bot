--GC_GRACE = 10; // 10 minutes to remove marked for deletion
--column_type = 'Super' // type is super column

--create keyspace
CREATE KEYSPACE social with placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy' and strategy_options = {replication_factor:1};

--create column
CREATE COLUMN FAMILY cf_test_simple WITH comparator = UTF8Type AND key_validation_class = UTF8Type AND column_metadata = [{column_name: post_id_user_id_user_name, validation_class: UTF8Type}];
UPDATE COLUMN FAMILY cf_test_simple WITH GC_GRACE = 0; // 0 seconds